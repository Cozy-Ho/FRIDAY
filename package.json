{
  "name": "friday",
  "version": "1.0.0",
  "main": "standalone.ts",
  "repository": "https://github.com/cozy-ho/friday",
  "author": "rkdwn <kj2693119@gmail.com>",
  "license": "MIT",
  "scripts": {
    "config:develop": "cp -av envs/default.env .env",
    "build:clean": "rm -rf build",
    "build:compile": "tsc",
    "build:module": "cp -r node_modules build",
    "build:develop": "run-s build:clean config:develop build:compile build:module",
    "compose:build:develop": "docker-compose build develop",
    "compose:push:develop": "docker-compose push develop",
    "deploy:develop": "run-s compose:build:develop compose:push:develop rollout",
    "run": "nodemon --exec ts-node src/standalone.ts",
    "start": "run-s config:develop run",
    "rollout": "kubectl rollout restart deployments friday"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/node-telegram-bot-api": "^0.56.0",
    "@types/puppeteer": "^5.4.4",
    "dotenv": "^16.0.0",
    "node-telegram-bot-api": "^0.56.0",
    "nodemon": "^2.0.15",
    "puppeteer": "^13.3.2"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
