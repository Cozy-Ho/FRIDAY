{
  "name": "friday",
  "version": "1.0.0",
  "main": "standalone.ts",
  "repository": "https://github.com/cozy-ho/friday",
  "author": "rkdwn <kj2693119@gmail.com>",
  "license": "MIT",
  "scripts": {
    "config:develop": "cp -av envs/default.env .env",
    "config:deploy": "cp -av envs/deploy.env .env",
    "build:clean": "rm -rf build",
    "build:compile": "tsc --build",
    "build:module": "cp -r node_modules build",
    "build": "run-s build:clean build:compile build:module",
    "build:develop": "run-s config:develop build",
    "build:deploy": "run-s config:deploy build",
    "compose:build:develop": "docker-compose build k3s",
    "compose:push:develop": "docker-compose push k3s",
    "deploy:develop": "run-s compose:build:develop compose:push:develop rollout",
    "start": "nodemon --exec ts-node -r tsconfig-paths/register --transpile-only src/standalone.ts",
    "start:local": "run-s config:develop start",
    "start:develop": "run-s config:develop start:daemon",
    "start:daemon": "node build/standalone.js",
    "rollout": "kubectl rollout restart deployments friday"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "module-alias": "^2.2.2",
    "node-telegram-bot-api": "^0.56.0",
    "nodemon": "^2.0.15",
    "puppeteer": "^13.3.2",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/module-alias": "^2.0.1",
    "@types/node-telegram-bot-api": "^0.56.0",
    "@types/puppeteer": "^5.4.4",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  }
}
